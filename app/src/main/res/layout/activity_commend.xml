<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SVCommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/commend_data_actvt_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/GreenLL"
        android:text="这里是推荐的习题题干"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06326034" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <TextView
        android:id="@+id/how_control_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="请选择掌握程度："
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/join_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/GreenLight"
        android:text="加入错题本"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <Button
        android:id="@+id/look_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:text="查看答案"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/how_hard_text2" />

    <Button
        android:id="@+id/close_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="关闭答案"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/look_btn" />

    <TextView
        android:id="@+id/know_point_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/YellowLL"
        android:text="知识点："
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/commend_data_image_actvt" />

    <TextView
        android:id="@+id/commend_point_data_actvt_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/YellowLL"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/commend_data_actvt_text"
        app:layout_constraintStart_toStartOf="@+id/commend_data_actvt_text"
        app:layout_constraintTop_toBottomOf="@+id/know_point_txt2" />

    <TextView
        android:id="@+id/how_hard_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/YellowLL"
        android:text="习题难度："
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/know_point_txt2"
        app:layout_constraintTop_toBottomOf="@+id/commend_point_data_actvt_text" />

    <TextView
        android:id="@+id/commend_how_hard_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/YellowLL"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/how_hard_text2"
        app:layout_constraintTop_toTopOf="@+id/how_hard_text2" />

    <TextView
        android:id="@+id/commend_answer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/GreenLL"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/look_btn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="是否加入错题本？"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/answer_detail_image_actvt" />

    <Button
        android:id="@+id/yes_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="是"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="系统推荐习题："
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="280dp"
        android:layout_height="5dp"
        android:layout_marginTop="4dp"
        android:background="@color/GreenDark"
        app:layout_constraintBottom_toTopOf="@+id/know_point_txt2"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/commend_data_actvt_text"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/control_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/join_btn"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/how_control_text" >

        <RadioButton
            android:id="@+id/control5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完全懂" />

        <RadioButton
            android:id="@+id/control4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本懂" />

        <RadioButton
            android:id="@+id/control3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一知半解  " />

        <RadioButton
            android:id="@+id/control2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本不懂  " />

        <RadioButton
            android:id="@+id/control1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完全不懂  " />
    </RadioGroup>

    <ImageView
        android:id="@+id/commend_data_image_actvt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/commend_data_actvt_text"
        app:srcCompat="@drawable/ic_note_photo" />

    <TextView
        android:id="@+id/answer_detail_actvt_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="答案详解"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ImageView
        android:id="@+id/answer_detail_image_actvt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/answer_detail_actvt_text"
        app:srcCompat="@drawable/ic_note_black_24dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="答案详解："
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/commend_answer_text" />

    <TextView
        android:id="@+id/commend_data_image_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/commend_data_image_actvt"
        app:layout_constraintStart_toEndOf="@+id/commend_data_image_actvt"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/answer_detail_image_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/answer_detail_image_actvt"
        app:layout_constraintStart_toEndOf="@+id/answer_detail_image_actvt"
        app:layout_constraintTop_toTopOf="@+id/answer_detail_image_actvt" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>